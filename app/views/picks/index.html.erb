<% if @east_series.present? %>

  <h2>Round <%= @east_series.first.round %></h2>

  <h3>East Conference</h3>
  <% @east_series.each do |game| %>
    <div class="east">
      <h3><%= game.away_team_id.titleize -%> vs. <%= game.home_team_id.titleize -%></h3>

      <% if pick = completed_pick(@round_one_picks, game) %>
        <p><%= link_to "#{game.away_team_id.titleize} : #{pick.away_team_wins}", edit_pick_path(pick) %></p>
        <p><%= link_to "#{game.home_team_id.titleize} : #{pick.home_team_wins}", edit_pick_path(pick) %></p>
      <% else %>
        <p><%= link_to "Make your picks", new_pick_path.concat("?series=#{game.id}") %></p>
      <% end %>

    </div>
  <% end %>

  <h3>West Conference</h3>
  <% @west_series.each do |game| %>
    <div class="west">
      <h3><%= game.away_team_id.titleize -%> vs. <%= game.home_team_id.titleize -%></h3>

      <% if pick = completed_pick(@round_one_picks, game) %>
        <p><%= game.away_team_id.titleize %>: <%= pick.away_team_wins %></p>
        <p><%= game.home_team_id.titleize -%>: <%= pick.home_team_wins %></p>
      <% else %>
        <p><%= link_to "Make your picks", new_pick_path.concat("?series=#{game.id}") %></p>
      <% end %>

    </div>
  <% end %>

<% end %>
